<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigationHome"
    tools:ignore="UnusedNavigation">
    <keep_state_fragment
        android:id="@+id/navigationHome"
        android:name="com.example.koincorountines.ui.movies.MoviesFragment"
        android:label="MoviesFragment"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_navigationSearch_to_movieDetailActivity"
            app:destination="@id/movieDetailActivity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpToInclusive="true" />
    </keep_state_fragment>
    <keep_state_fragment
        android:id="@+id/navigationSearch"
        android:name="com.example.koincorountines.ui.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_navigationSearch_to_movieDetailActivity"
            app:destination="@id/movieDetailActivity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpToInclusive="true"
            app:popUpTo="@id/navigationHome"/>
    </keep_state_fragment>
    <keep_state_fragment
        android:id="@+id/navigationMyList"
        android:name="com.example.koincorountines.ui.MyListFragment"
        android:label="MyListFragment"
        tools:layout="@layout/fragment_mylist">
        <action
            android:id="@+id/action_navigationSearch_to_movieDetailActivity"
            app:destination="@id/movieDetailActivity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpToInclusive="true"
            app:popUpTo="@id/navigationHome"/>
    </keep_state_fragment>
    <activity
        android:id="@+id/movieDetailActivity"
        android:name="com.example.koincorountines.ui.MovieDetailActivity"
        android:label="MovieDetailActivity"
        tools:layout="@layout/activity_movie_detail">
        <argument
            android:name="movieDetail"
            app:argType="com.example.koincorountines.model.MoviesDetail" />
    </activity>
</navigation>